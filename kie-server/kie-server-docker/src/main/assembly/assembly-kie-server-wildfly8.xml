<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  
  <dependencySets>
    <!-- The KIE Server war to include into docker container. -->
    <dependencySet>
      <includes>
        <include>org.kie.server:${kie.docker.kie-server.jee7.artifactId}:war:ee7</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <outputFileNameMapping>kie-server.war</outputFileNameMapping>
    </dependencySet>
  </dependencySets>

  <!-- The generated maven site as a webapp. -->
  <componentDescriptors>
    <componentDescriptor>${kie.docker.kie-server-base.path}/assembly/assembly-site.xml</componentDescriptor>
  </componentDescriptors>
  
</assembly>
